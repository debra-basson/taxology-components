  <script>
    (function(){
      var section = document.getElementById('tx-quiz-v3');
      if(!section) return;

      var out = section.querySelector('#txq3-out');
      if(!out) return;

      var copy = {
        assessment:{h:"You're not alone.", t:"We double-check assessments and verify that you have claimed everything you are entitled to.", topic:"assessment"},
        verification:{h:"Verification letters need exact evidence.", t:"We compile and submit your supporting documents so that your tax return is completed without comebacks.", topic:"verification"},
        penalties:{h:"Missed a deadline? Let‚Äôs stop the clock.", t:"We regularise and manage exposure fast so you can move forward. We will also help you set up a system so that you have future peace of mind.", topic:"penalties"},
        compliance:{h:"If it feels risky, let‚Äôs stabilise it.", t:"We steady VAT, PAYE and CIPC filings and keep you on track.If there are any penalties we will apply for a remission.", topic:"compliance"},
        default:{h:"Not sure where to start?", t:"Tell us what‚Äôs happening and we‚Äôll reply within 1 business day.", topic:"ask-practitioner"}
      };

      function build(topicKey){
        var c = copy[topicKey] || copy.default;
        var ask = "/ask-a-practitioner/?topic=" + encodeURIComponent(c.topic) + "&source=quiz";
        var wa  = "https://wa.me/27839767273?text=" + encodeURIComponent("Hi TAXology team, I need help with: " + c.topic);
        var wmClass = (topicKey==='default') ? " watermark" : "";
        return '' +
          '<div class="res-card'+ wmClass +'">' +
            '<h4>'+ c.h +'</h4>' +
            '<p>'+ c.t +'</p>' +
            '<div class="cta-row">' +
              '<a class="btn btn-primary" href="'+ ask +'">Ask a Practitioner</a>' +
              '<a class="btn btn-whatsapp" href="'+ wa +'" target="_blank" rel="noopener">WhatsApp (fast track)</a>' +
            '</div>' +
            '<div class="trust">' +
              '<span class="tchip">Registered: SAIT ‚Ä¢ SARS ‚Ä¢ CIPC</span>' +
              '<span class="tchip">POPIA-aligned</span>' +
            '</div>' +
          '</div>';
      }

      function render(topicKey){ out.innerHTML = build(topicKey); }

      section.addEventListener('click', function(e){
        var btn = e.target.closest('.btn-mini');
        if(!btn || !section.contains(btn)) return;
        var topic = (btn.getAttribute('data-topic') || 'default').toLowerCase();
        render(topic);
      });
    })();
  </script>
</section>
